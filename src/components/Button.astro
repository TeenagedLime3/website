---
export interface Props {
  img?: string;
  destination?: string;
}

const { img, destination } = Astro.props;
---

<a
  href={destination}
  target="_blank"
  class="cursor-pointer bg-black/[.15] border-white backdrop-blur-[1px] border-2 p-3 rounded-3xl hover:bg-black/[1] transition-all duration-500 ease-in-out"
>
  <img src={img} width="50" height="50" />
</a>
