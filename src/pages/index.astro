---
import Layout from "../layouts/Layout.astro";
import Button from "../components/Button.astro";
---

<Layout
  bodyClasses="bg-zinc-800 text-white bg-no-repeat bg-center bg-cover bg-[url(images/background.jpg)]"
>
  <!-- Title -->
  <div class="prevent-select pt-36" draggable="false">
    <!-- Centered H1 -->
    <div class="flex justify-center w-screen">
      <h1
        class="text-9xl text-center font-bold inline-block pb-6 bg-gradient-to-br from-[#A0F1FF] to-[#69CBFF] bg-clip-text text-transparent"
      >
        TeenagedLime3
      </h1>
    </div>

    <!-- Subtitle -->
    <h3 class="text-4xl text-center pt-3 font-semibold">
      British &#x2022; Tea &#x2022; Water with leaf in it
    </h3>
  </div>

  <!-- <a href="https://www.freecodecamp.org">this links to freecodecamp.org</a> -->

  <div class="pt-24 pb-5 flex justify-center">
    <Button
      img="images/gitHub.png"
      destination="https://github.com/TeenagedLime3"
    />

    <!-- Spacer -->
    <div class="mr-6"></div>

    <Button
      img="images/codeCamp.png"
      destination="https://www.freecodecamp.org/"
    />
  </div>
</Layout>
